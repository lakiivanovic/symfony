{# empty Twig template #}
{% extends "base.html.twig" %}

{% block body %}
    
    <p>{{ text|upper }}</p>
    <br>
    
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Naziv</th>
                <th>Opis</th>
                <th>Kategorija</th>
                <th>Cena</th>
                <th>Slika</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for artikal in artikli %}
                <tr>
                    <td>{{ artikal.id }}</td>
                    <td>{{ artikal.title }}</td>
                    <td>{{ artikal.description }}</td>
                    <td>{{ artikal.category }}</td>
                    <td>{{ artikal.price }}</td>
                    <td>{{ artikal.image }}</td>
                    <td><a href="{{ path('article_show', { 'id' : artikal.id, 'name' : artikal.title }) }}">Show</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    

{% endblock %}